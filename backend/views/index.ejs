<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Document</title>
  <!-- import bootstrap via link -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous" />
  <link rel="stylesheet" href="/index.css" />
</head>

<body>
  <div class="auth-wrapper">
    <div class="auth-inner">
      <form action="" method="post" id="form">
        <h3>Select a new Password for <%= email%></h3>
        <div class="mb-3">
          <label>New Password</label>
          <input type="password" class="form-control" name="password" id="password" />
        </div>
        <div class="mb-3">
          <label>Confirm Password</label>
          <input type="password" class="form-control" name="confirm-password" id="confirm-password" />
        </div>

      </form>
      <div class="d-grid">
        <button onclick="checkValues();" class="btn btn-primary">
          Submit
        </button>
        <p id="info"></p>

      </div>

    </div>
  </div>

  <script>

    const pwField1 = document.querySelector("#password");
    const pwField2 = document.querySelector("#confirm-password");
    const form = document.querySelector("#form");
    const infoPara = document.querySelector("#info");

    //status aus backend auffangen
    let status = '<%- JSON.stringify(status) %>';

    //falls status verifiziert (passwort nach rendern geupdated)
    //zeige nutzer 4 sek seine erfolgreichen pw reset an
    //gehe zur startroot dh. login in dem fall
    if (JSON.parse(status) == "verifiziert") {
      infoPara.style.color = "orange";
      infoPara.textContent = "Your password was resetted successfully. You'll be redirected to the login page...";
      setTimeout(() => {
        window.location.href = "https://johannespirlet.github.io/flow/";
      }, 4000);
    }
    //prueft ob beide eingabefelder gleichen value & nicht leer
    let checkValues = function () {
      //falls nicht, zeige es user im infoparagraph an
      if (pwField1.value.trim() != pwField2.value.trim() || pwField1.value.trim() == "" || pwField2.value.trim() == "") {
        infoPara.style.color = "red";
        infoPara.textContent = "Both fields do not match. Please confirm your password properly.";
        //falls doch, submit das Formular
      } else {
        form.submit();
      }
    }
  </script>
</body>

</html>